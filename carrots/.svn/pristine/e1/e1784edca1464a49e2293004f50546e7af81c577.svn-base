*, *:before, *:after {
    box-sizing: border-box;
}
*, *:focus, *:active, *:focus:active, *:before, *:before:focus, *:before:active, *:before:focus:active, *:after, *:after:focus, *:after:active, *:after:focus:active {
    outline: none;
}
.jqcarouse-style {
    padding-bottom: 75px;
}
.jqcarouse-style ul {
    padding: 0;
}
.jqcarouse-style li {
    list-style: none;
    padding: 0;
}
.jqcarouse-style h2 {
    text-align: center;
}
.jqcarouse-style h2:not(:first-child) {
    margin-top: 45px;
}

.jqcarouse-style p {
    margin: 20px 0 10px;
}

.jqcarouse-style p + p {
    margin-top: 0;
}

.jqcarouse-style .container {
    margin: 0 auto;
    max-width: 600px;
}

.jqcarouse-style .carousel {
    margin: 0 30px;
    /*width: calc(100% - ($button-spacing * 2));*/
}
.img-responsive{
    display: block;
    max-width: 30px;
    height: auto;
}
.swiper-button-next{
    background-image: none;
    right: 0;
}
.swiper-button-prev{
    background-image: none;
    left: 0;
}
.jqcarouse-style .carousel[data-shift="1"] .carousel-inner > .item {
    -webkit-transition: all .5s ease-in-out;
    transition: all .5s ease-in-out;
}

.jqcarouse-style .carousel .carousel-inner > .item.row {
    margin: 0;
}
.jqcarouse-style .carousel .carousel-control {
    background: none;
    color: transparent;
    overflow: hidden;
    text-shadow: none;
    /*-webkit-transition: all .3s ease-in-out;*/
    /*transition: all .3s ease-in-out;*/
    width: 30px;
}
.jqcarouse-style .carousel .carousel-control:before {
    color: #444;
    font-family: 'Glyphicons Halflings';
    position: absolute;
    top: 50%;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    width: 40px;
}

.jqcarouse-style .carousel .carousel-control.left {
    opacity: 1;
    left: -13px;
    background-color: #f7f7f7;
    width: 60px;
    text-align: left;
}
.jqcarouse-style .carousel .carousel-control.left span img {
    opacity: 0.5;
}
.jqcarouse-style .carousel .carousel-control.left:hover span img {
    opacity: 0.9;
}
/*.jqcarouse-style .carousel .carousel-control.left:before {*/
/*content: '\e079';*/
/*}*/
.jqcarouse-style .carousel .carousel-control.left:after {
    right: -100%;
}
.jqcarouse-style .carousel .carousel-control.right {
    opacity: 1;
    right: -13px;
    background-color: #f7f7f7;
    width: 60px;
    text-align: right;
}

.swiper-button-prev img {
    opacity: 0.5;
}
.swiper-button-prev img:hover{
    opacity: 0.9;
}
.swiper-button-next img {
    opacity: 0.5;
}
.swiper-button-next img:hover{
    opacity: 0.9;
}
/*.jqcarouse-style .carousel .carousel-control.right:before {*/
/*content: '\e080';*/
/*}*/

.jqcarouse-style ul.item > div.clear-padding {
    padding: 0 10px;
}
.jqcarouse-style ul.item > div.clear-padding:first-child {
    /*padding: 0;*/
}
.home-friend > img {
    border: solid 1px #ececec;
}
.friend-carousel-inner {
    width: 93%;
    margin: 0 auto;
}
.friend-banner-pre {
    left: 0!important;
}
.friend-banner-next {
    right: 0!important;
}
.banner-pre, .banner-next {
    display: inline-block;
    position: absolute;
    top: 47%;
    margin-top: -10px;
    z-index: 5;
}
.home-friend {
    color: #999999;
    background-color: rgb(255, 255, 255);
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    border-radius: 3px;
    border: 1px solid #F0F0F0;
    padding: 30px 17px 0 17px;
    margin: 2px 0;
    min-height: 338px;
    cursor: pointer;
}
@media only screen and (max-width: 991px){
    .home-friend {
        margin: 20px 24%;
    }
}
@media only screen and (max-width: 767px){
    .home-friend {
        margin: 20px 0;
    }
}
.home-friend:hover {
    -moz-box-shadow: 1px 0 20px #DAE0E3;
    -webkit-box-shadow: 1px 0 20px #DAE0E3;
    box-shadow: 1px 0 20px #DAE0E3;
}
.home-friend-name {
    color: #294154;
    font-size: 16px;
    font-weight: bold;
}
.home-friend-intro {
    color: #666666;
    font-size: 14px;
    margin: 10px 0 20px 0;
}
@media screen and (max-width: 992px) {
    .swiper-button-prev, .swiper-button-next {
        display: none;
    }
    .friend-carousel-hide {
        display: none;
    }
}