@charset "UTF-8";
@import "global";

.find-jobs {
  .nav-menu {
    background: #f43851;
    border-top: 1px solid #f43851;
    border-bottom: 1px solid #f43851;
    padding: 0;
    float: left;
    width: 21%;
    @include xs {
      width: 0;
    }
    @include sm {
      width: 0;
    }
    position: relative;
    & > div {
      height: 150px;
      padding: 15px 30px 15px 20px;
      .menu-title {
        position: relative;
        @include middle;
        justify-content: space-between;
        font-size: 1.8rem;
        color: #fff;
        margin-bottom: 15px;
        .hover-img {
          display: none;
        }
        span {
          display: inline-block;
          position: absolute;
          left: 30px;
        }
      }
      a {
        display: inline-block;
        font-size: 1.4rem;
        color: #fff;
        margin-right: 20px;
        margin-bottom: 15px;
        cursor: pointer;
      }
      .hover-menu {
        z-index: 999;
        background: #fff;
        position: absolute;
        left: 100%;
        top: 0;
        background: #fff;
        width: 700px;
        height: 452px;
        display: none;
        border: 1px solid #f43851;
        border-left: 0;
        transform: translateY(-1px);
        padding: 20px 0 30px 40px;
        span {
          font-size: 1.6rem;
          color: #f43851;
          display: inline-block;
          margin: 10px 10px 10px 0;
          text-align: right;
          width: 64px;
        }
        a {
          cursor: pointer;
          font-size: 1.4rem;
          color: #536a82 !important;
          padding: 0 16px;
          margin: 0;
          border-right: 1px solid #E9E9E9;
          &:hover {
            color: #f43851 !important;
          }
          &:last-of-type {
            border: none;
          }
        }
      }
      &:hover {
        background: #ffffff;
        span {
          color: #f43851;
        }
        .hover-img {
          display: inline-block;
        }
        .initial-img {
          display: none;
        }
        a {
          color: #f43851;
        }
        .hover-menu {
          display: block;
        }
      }

    }
  }
  .job-carousel {
    position: relative;
    float: left;
    width: 79%;
    @include xs {
      width: 100%;
    }
    @include sm {
      width: 100%;
    }
    img {
      @include xs {
        max-height: 360px;
      }
      @include sm {
        max-height: 360px;
      }
      @include md-lg {
        height: 452px;
      }
      width: 100%;
    }
    .glyphicon-chevron-left:before {
      content: '';
      display: inline-block;
      width: 30px;
      height: 40px;
      background-image: url("../img/zhiweipre.png");
    }
    .glyphicon-chevron-right:before {
      content: '';
      display: inline-block;
      width: 30px;
      height: 40px;
      background-image: url("../img/zhiweinext.png");
    }
    .search-box {
      position: absolute;
      top: 40px;
      left: 50%;
      width: 74.3%;
      transform: translateX(-50%);
      form {
        padding: 15px;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 8px;
        .input-group {
          background: #fff;
          border-radius: 4px;
        }
        span:first-child {
          border: 0;
          font-size: 1.6rem;
          font-weight: 700;
          color: #2d3e50;
          background: #fff;
          @include xs{
            display: none;
          }
        }
        input {
          border: none;
          &::placeholder {
            font-size: 1.4rem;
          }
        }
        span:last-child {
          border: 0;
          background: #fc2a48;
          button {
            font-size: 1.6rem;
            color: #fff;
            background: #fc2a48;
          }
        }
      }
    }
  }
}