@charset "UTF-8";
@import "global";

.carrot-top{
  z-index: 100;
  padding-bottom: 20px;
  background-color: #f7f7f7;
  .pd-0{
    padding:0;
  }
  .header-panel{
    background-color: white;
    box-shadow: 0 4px 7px #eeeef0;
    .main-logo{
      margin-top: 19px;
      cursor: pointer;
      @include xs{
        margin-top: 4px;
      }
    }
    .main-location{
      font-size: 16px;
      display: inline-block;
      margin-top: 25px;
      margin-left: 20px;
      padding: 6px 0 6px 15px;
      border-left: 1px solid #e2e2e2;
    }
    .disHidden{
      @include md-max{
        display: none;
      }
    }
    .nav-xs{
      @include xs{
        position: absolute;
        width: 100%;
        top: 52px;
        z-index: 100;
        background-color: #fff;
        border-bottom: 1px solid #efeff1;
      }
    }
    .selected-location{
      vertical-align: middle;
      margin-left: 4px;
      font-size: 16px;
      color: black;
    }
    .nav-media{
      margin: 0;
      cursor: pointer;
      @include sm-lg{
        display: -webkit-flex;
        -webkit-box-pack: end;
        justify-content: flex-end;
      }
    }
    .navbar-nav>li{
      font-size: 16px;
      line-height: 77px;
      margin: 0 24px;
      cursor: pointer;
      text-align: center;
    }
    .nav-page:hover .nav-page-underline, .navChoice > .nav-page-underline {
      width: 100%;
    }
    .mg-right-0{
      @include xs-lg{
        margin-right: 0 !important;
      }
    }
    .nav-page:hover, .navChoice {
      color: #fc2b47 !important;
    }
    .nav-page-underline{
      width: 100%;
      display: block;
      width: 0;
      height: 3px;
      background-color: #fc2b47;
      margin: 0 auto;
      border-bottom: 0 solid #fc2b47;
      -webkit-transition: width .2s;
    }
    .navbar-toggle{
      background-color: #fc2b47;
      border: none;
    }
    .navbar-toggle span{
      background-color: #fff !important;
    }

  }
}

footer {
  border-top: 2px solid #000;
  background: #ffffff;
  width: 100%;
  margin-top: 15px;
  .footer-top {
    font-size: 1.4rem;
    color: #b0b0b0;
    padding-top: 25px;
    padding-bottom: 10px;
    ul {
      li {
        margin-bottom: 15px;
        &:first-child{
          font-size: 1.6rem;
        }
      }
    }
    .footer-right {
      @include md-lg {
        @include middle;
        flex-direction: column;
      }
    }
  }
  .footer-bottom {
    padding: 6px 15px;
    background: #35485b;
    text-align: center;
    font-size: 1.2rem;
    color: #999999;
  }

}