angular.module('myApp')
    .controller('companyDetailCtrl', function ($rootScope, $stateParams, $state, $http, requestSvc) {
        let vm = this;
        vm.id = $stateParams.id;
        requestSvc.getCompanyDetils(vm.id)
            .then(function (res) {
                console.log(res);
                if (res.data.code === 0) {
                    vm.companyLogo = res.data.data.company.logo;
                    vm.companyName = res.data.data.company.name;
                    vm.companySlogan = res.data.data.company.slogan;
                    vm.production = res.data.data.productList[0].logo;
                    vm.companyIntroduction = res.data.data.company.summary;
                } else {
                    $rootScope.alert(res.data.data.message);
                }
            })
    });