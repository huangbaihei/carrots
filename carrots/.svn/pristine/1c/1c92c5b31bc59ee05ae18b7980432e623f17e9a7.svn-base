<ul class="separate-page">
    <li>
        <!-- 每页显示 -->
        <!-- <input type="text" ng-model="size"
               onkeyup="this.value=this.value.replace(/[^\d]/g,'') "
               onafterpaste="this.value=this.value.replace(/[^\d]/g,'') "
        >条 -->
    </li>
    <li>
        <ul uib-pagination=""
            class="pagination"
            total-items="total"
            ng-model="page"
            max-size="3"
            boundary-links="true"
            boundary-link-numbers="true"
            first-text="首页"
            last-text="末页"
            previous-text="上一页"
            next-text="下一页"
            ng-change="refreshList()"
            items-per-page="size"
        >
        </ul>
    </li>
    <li>去第
        <input
                type="text" ng-model="toPage"
                onkeyup="this.value=this.value.replace(/[^\d]/g,'') "
                onafterpaste="this.value=this.value.replace(/[^\d]/g,'') "
        >页
    </li>
    <li><a class="btn btn-default" ng-click="refreshList()">确定</a></li>
</ul>