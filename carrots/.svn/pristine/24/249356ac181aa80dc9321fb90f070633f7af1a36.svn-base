<header class="carrot-top">
    <div class="header-panel">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 pd-0">
                    <!--左logo-->
                    <div class="col-sm-5">
                        <img src="img/carrot.png" class="pull-left main-logo">
                        <div class="main-location disHidden">
                            <img src="img/carrot-small.png">
                            <span class="selected-location">北京站</span>
                        </div>
                    </div>
                    <!--按钮-->
                    <div class="navbar-header">
                        <button
                                type="button"
                                class="navbar-toggle collapsed"
                                data-toggle="collapse"
                                data-target=".navbar-collapse">
                            <span class="sr-only">按钮</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>
                    <!--右导航-->
                    <div class="pull-right navbar-collapse col-sm-6 nav-xs collapse">
                        <ul class="nav navbar-nav navbar-right nav-media main-nav">
                            <li class="nav-page" ui-sref="home.desk" ng-class="{navChoice:state.includes('home.desk')}">
                                首页
                                <span class="nav-page-underline"></span>
                            </li>
                            <li class="nav-page" ui-sref="home.findJobs"
                                ng-class="{navChoice:state.includes('home.findJobs') || state.includes('home.searchHead') || state.includes('home.recommend') || state.includes('home.newest') || state.includes('home.companyDetail') || state.includes('home.jobDetails')}">
                                找职位
                                <span class="nav-page-underline"></span>
                            </li>
                            <li class="nav-page" ui-sref="home.findElites"
                                ng-class="{navChoice:state.includes('home.findElites') || state.includes('home.companyList')}">
                                找精英
                                <span class="nav-page-underline"></span>
                            </li>
                            <li class="nav-page mg-right-0" ui-sref="home.about"
                                ng-class="{navChoice:state.includes('home.about')}">
                                关于我们
                                <span class="nav-page-underline"></span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

