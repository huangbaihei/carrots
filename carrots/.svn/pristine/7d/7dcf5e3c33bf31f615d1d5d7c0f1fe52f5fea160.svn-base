@charset "UTF-8";
@import "global";

.company-list {
  background: #f6f7f8;
  font-size: 14px;
  .company-list-banner {
    width: 100%;
  }
  .padding-0{
    padding:0;
    margin-bottom:15px;
  }
  .flex{
    display:flex;
  }
  .key-words{
    display: flex;
    align-items: center;
  }
  .search-option{
    display: flex;
    align-items: center;
    max-width: 100%;
    font-weight: 700;
    white-space:nowrap;
  }
  .search-input{
    width: 40%;
    display: inline-block;
    margin-left:15px;
  }
  .cancelChoice {
    color: #536a82;
    display: inline-block;
    padding: 0 8px;
    margin: 0 2px;
    cursor:pointer;
  }
  .beChosen {
    display: inline-block;
    margin:2px;
    background-color: #fc2b47;
    color: white;
    cursor:pointer;
  }
  .choseBoxes {
    padding: 5px 10px;
  }
  .search-company-s {
    background-color: #fff;
    padding: 15px 20px;
    margin: 0 15px 20px -15px;
    @include xs{
      margin-right:-15px;
    }
  }
  .search-company-list-s {
    padding-top: 20px;
    margin-left: -30px;
    margin-bottom: 20px;
    background-color: #fff;
    @include xs{
      margin-right:-30px;
    }
  }
  .search-btn {
    padding: 20px 0;
  }
  .btn-xs{
    font-size:14px;
  }
  .btn-default{
    margin-right: 20px;
  }
  .btn-danger{
    background-color: #fc2b47;
    border-color: #fc2b47;
  }
  .search-company-card {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 30px;
    min-height: 200px;
    .company-card {
      flex: 1;
      display: flex;
      padding: 20px;
    }
  }
  .company-panel {
    border: 1px solid #e8e8e8;
    border-radius: 5px;
    cursor: pointer;
  }
  .company-logo {
    flex: 0 0 115px;
    height: 115px;
    display: flex;
    align-items: center;
    justify-content: center;
    img {
      display: inline-block;
      width: 100%;
      height: 100%;
    }
  }
  .company-text {
    padding-left: 20px;
    padding-top: 20px;
    overflow: hidden;
    p {
      margin-bottom: 15px;
    }
    .company-name {
      font-size: 16px;
      font-weight: 600;
      color: #2d3e50;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
    .common-slogan,
    .company-jobs {
      color: #536a82;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  }
  .company-message {
    @include middle;
    justify-content: space-around;
    color: #999;
    padding: 10px 0;
    background-color: #fafafa;
  }
  .no-find {
    height: 495px;
    @include middle-center;
  }
}

// 404
.error{
  .error404{
      @include middle-center;
      padding:170px 0 145px;
      border-bottom: 1px solid #e8e8e8;
      @include xs{
        flex-direction: column;
        padding:85px 0 72px;
      }
    }
    .error-title{
      margin:20px 0;
      font-size: 16px;
      font-weight: 700;
    }
    .groom-page{
      padding-bottom:20px;
      margin: 0;
      border-bottom: 1px solid #e8e8e8;
    }
    .groom-content{
      margin: 23px 0 15px;
    }
    .groom-head{
      border: 1px solid #d9d9d9;
      border-radius: 5px;
    }
    .groom-main{
      display:flex;
      padding:10px;
    }
    .groom-logo{
      height: 110px;
      width: 110px;
      padding:0;
      font-size: 0;
      text-align: center;
      box-sizing: content-box;
      border: 1px solid #E8E8E8;
    }
    .groom-colu{
      display: flex;
      flex-direction: column;
      align-self: center;
      width: calc(100% - 110px);
      margin-left:10px;
      @include xs{
        margin-left:20px;
      }
    }
    .groom-exper{
      margin-bottom:10px;
      color: #fc2b47;
      font-size: 16px;
    }
    .groom-name{
      margin-bottom:10px;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
      color: #536a82;
    }
    .groom-blank{
      padding-bottom:40px;
    }
}
