@charset "UTF-8";
@import "global";


.device {
  height: auto;
  border-radius: 20px;
  margin: 5px 0 0;
  position: relative;
  background: #f7f7f7;
.device .arrow-left {
  background: url(img/arrows.png) no-repeat left top;
  position: absolute;
  left: 10px;
  top: 50%;
  margin-top: -15px;
  width: 17px;
  height: 30px;
  z-index: 2;
}
.device .arrow-right {
  background: url(img/arrows.png) no-repeat left bottom;
  position: absolute;
  right: 10px;
  top: 50%;
  margin-top: -15px;
  width: 17px;
  height: 30px;
  z-index: 2;
}
.img-w{
	height: 29vw!important;
	cursor: pointer;
    vertical-align: middle;
}
.swiper-slide{
	 @include middle-center;
}
.swiper-container {
  height: 29vw;
  width: 100%;
}
.content-slide {
  padding: 20px;
  color: #fff;
}
.title {
  font-size: 25px;
  margin-bottom: 10px;
}
.pagination {
  position: absolute;
  left: 0;
  text-align: center;
  bottom: 180px;
  width: 100%;

  z-index: 2;
}
.swiper-pagination-switch {
  display: inline-block;
  width: 10px;
  height: 10px;
  border-radius: 10px;
  background: #999;
  box-shadow: 0px 1px 2px #555 inset;
  margin: 0 3px;
  cursor: pointer;
}
.swiper-active-switch {
  background: #fff;
}
}

// 第一行静态图标
.lattice{
    display: flex;
  	flex-wrap: wrap;
    padding: 75px 20px;
    @include md-max{
    	flex-direction: column;
    	@include center;
    }
  }
  .lattice-content{
    @include middle-center;
    flex-direction: column;
    font-size: 1.7rem;
    width: 25%;
    @include md-max{
    	width:100%;
    	margin-top: 20px;
    }
  }

  .shorttime{
    @include middle-center;
    height: 6.5rem;
  }
  .lattice-content-crude{
    @include middle-center;
    margin: 2rem 0 0 0;
    color: black;
    font-weight: bold;
  }
  .lattice-content-text{
    display: flex;
    margin: 1rem 0 0 0;
    font-size: 1.5rem;
    color: #63859f;
    width: 20rem;
    @include center;
  }
  .lattice-contents{
    @include middle-center;
    flex-direction: column;
    width: 24%;
    border-left: 1px solid #e5e9eb;
    @include md-max{
    	width:100%;
    	border-left: 0;
    	margin-top: 30px;
    }
  }
  .lattice-details{
  	font-size: 1.7rem;
  	font-weight:900;
    color: #fc2e54;
    display: flex;
    line-height: 15px;
  }
  .lattice-details-text{
  	font-size: 1.5rem;
  	padding-bottom: 40px;
    color: #22415d;
  }

// 第二行静态图标
.service{
	padding:75px 0;
}
.process{
	@include middle-center;
	font-weight:900;
	font-size:20px;
	color:#22415d;
	width:100%;
}
.horizontalline{
	@include  middle-center;
	height: 2px;
    width: 30px;
    background-color: #fc3f58;
    margin: 4px auto;
}
.serviceflow{
	@include middle-center;
	font-size:17px;
	color:#8aa5b7;
	width:100%;
}
.service-process{
	@include  middle-center;
	margin-bottom: 40px;
	@include md-max{
		flex-direction:column;
		margin-bottom:0;
	}
}
.service-items{
	padding: 0;
}
.middle{
	margin-top: -40px;
	z-index:-1;
	@include md-max{
		display:none;
	}
}
.line{
	display: block;
    border-bottom: 1px dashed #ffd8d9;
}
.shape{
	position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
}
.box{
	border-radius: 5px;
    border: 1px solid #E9EDEF;
    padding: 0;
    display: inline-block;
    @include md-max{
		border: none;
	}
}
.ser-img{
	display: block;
    max-width: 100%;
    height: auto;
    border-radius: 2px 2px 0 0;
    margin: 0 auto;
}
.ser-p{
	padding: 10px 0;
    text-align: center;
    font-size: 16px;
    color: #38556d;
    white-space:nowrap;
}