@charset "UTF-8";
@import "global";

.desk {
  // 首页banner
  .bannerbackground {
    background: #f6f7f8;
  }
  // 最新职位
  .home-comment {
    padding-bottom: 75px;
  }
  .position {
    background: #f6f7f8;
  }
  .process-center {

  }
  .more {
    position: absolute;
    font-size: 16px;
    right: 50px;
    top: -30px;
    color: #536a82;
  }
  .wh-150 {
    width: 100%;
    height: 70%;
    img {
      width: 100%;
      height: 100%;
      padding: 15px;
      object-fit: contain;
    }
  }
  .partner-two {
    height: 260px;
    background: #fff;
    border: 1px solid #e5e9eb;
    border-radius: 8px;
    cursor: pointer;
  }
  .partner-two:hover {
    box-shadow: 1px 0 20px #DAE0E3;
  }
  .banner {
    height: 500px;
    @include xs {
      height: 250px;
    }
  }
  .width-320 {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .mglr-30 {
    margin: 0 30px;
  }
  .padding14-16 {
    border-top: 2px solid #f6f7f8;
    padding: 14px 0 16px;
  }
  .position-conter {
    width: 92%;
    margin: 0 auto;
  }
  .carousel-control {
    position: static;
  }
  .bannername {
    font-size: 16px;
    font-weight: bold;
    display: block;
    color: #2d3e50;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .mg-0 {
    margin: 0;
  }
  .companyname {
    font-size: 14px;
    color: #456e8d;
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .clear-margin {
    @include lg-max {
      margin-bottom: 10px;
    }
  }

  // 第一行静态图标
  .lattice {
    display: flex;
    flex-wrap: wrap;
    padding: 75px 20px;
    @include md-max {
      flex-direction: column;
      @include center;
    }
  }
  .lattice-content {
    @include middle-center;
    flex-direction: column;
    font-size: 1.7rem;
    width: 25%;
    @include md-max {
      width: 100%;
      margin-top: 20px;
    }
  }

  .shorttime {
    @include middle-center;
    height: 6.5rem;
  }
  .lattice-content-crude {
    @include middle-center;
    margin: 2rem 0 0 0;
    color: black;
    font-weight: bold;
  }
  .lattice-content-text {
    display: flex;
    margin: 1rem 0 0 0;
    font-size: 1.5rem;
    color: #63859f;
    width: 20rem;
    @include center;
  }
  .lattice-contents {
    @include middle-center;
    flex-direction: column;
    width: 24%;
    border-left: 1px solid #e5e9eb;
    @include md-max {
      width: 100%;
      border-left: 0;
      margin-top: 30px;
    }
  }
  .lattice-details {
    font-size: 1.7rem;
    font-weight: 900;
    color: #fc2e54;
    display: flex;
    line-height: 15px;
  }
  .lattice-details-text {
    font-size: 1.5rem;
    padding-bottom: 40px;
    color: #22415d;
  }

  // 第二行静态图标
  .service {
    padding: 75px 0;
  }
  .process {
    @include middle-center;
    font-weight: 900;
    font-size: 20px;
    color: #22415d;
    width: 100%;
  }
  .horizontalline {
    @include middle-center;
    height: 1.5px;
    width: 20.5px;
    background-color: #fc3f58;
    margin: 4px auto;
  }
  .serviceflow {
    @include middle-center;
    font-size: 17px;
    color: #8aa5b7;
    width: 100%;
  }
  .service-process {
    @include middle-center;
    margin-bottom: 40px;
    @include md-max {
      flex-direction: column;
      margin-bottom: 0;
    }
  }
  .service-items {
    padding: 0;
  }
  .middle {
    margin-top: -40px;
    @include md-max {
      display: none;
    }
  }
  .line {
    display: block;
    border-bottom: 1px dashed #ffd8d9;
  }
  .shape {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
  }
  .box {
    border-radius: 5px;
    border: 1px solid #E9EDEF;
    padding: 0;
    display: inline-block;
    @include md-max {
      border: none;
    }
  }
  .ser-img {
    display: block;
    max-width: 100%;
    height: auto;
    border-radius: 2px 2px 0 0;
    margin: 0 auto;
  }
  .ser-p {
    padding: 10px 0;
    text-align: center;
    font-size: 16px;
    color: #38556d;
    white-space: nowrap;
  }
  .carousel-control .icon-prev, .carousel-control .glyphicon-chevron-left {
    left: 8%;
  }
  .carousel-control .icon-next, .carousel-control .glyphicon-chevron-right {
    right: 8%;
  }
}