@charset "UTF-8";
@import "global";

.find-jobs {
  background: #f6f7f8;
  .nav-menu {
    background: #f43851;
    border-top: 1px solid #f43851;
    border-bottom: 1px solid #f43851;
    padding: 0;
    float: left;
    width: 21%;
    @include xs {
      display: none;
    }
    @include sm {
      display: none;
    }
    position: relative;
    & > div {
      height: 150px;
      padding: 15px 30px 15px 20px;
      .menu-title {
        position: relative;
        @include middle;
        justify-content: space-between;
        font-size: 1.8rem;
        color: #fff;
        margin-bottom: 15px;
        .hover-img {
          display: none;
        }
        span {
          display: inline-block;
          position: absolute;
          left: 30px;
        }
      }
      a {
        display: inline-block;
        font-size: 1.4rem;
        color: #fff;
        margin-right: 20px;
        margin-bottom: 15px;
        cursor: pointer;
      }
      .hover-menu {
        z-index: 999;
        background: #fff;
        position: absolute;
        left: 100%;
        top: 0;
        background: #fff;
        width: 700px;
        height: 452px;
        display: none;
        border: 1px solid #f43851;
        border-left: 0;
        transform: translateY(-1px);
        padding: 20px 0 30px 40px;
        span {
          font-size: 1.6rem;
          color: #f43851;
          display: inline-block;
          margin: 10px 10px 10px 0;
          text-align: right;
          width: 64px;
        }
        a {
          cursor: pointer;
          font-size: 1.4rem;
          color: #536a82 !important;
          padding: 0 16px;
          margin: 0;
          border-right: 1px solid #E9E9E9;
          &:hover {
            color: #f43851 !important;
          }
          &:last-of-type {
            border: none;
          }
        }
      }
      &:hover {
        background: #ffffff;
        span {
          color: #f43851;
        }
        .hover-img {
          display: inline-block;
        }
        .initial-img {
          display: none;
        }
        a {
          color: #f43851;
        }
        .hover-menu {
          display: block;
        }
      }

    }
  }
  .job-carousel {
    position: relative;
    float: left;
    width: 79%;
    @include xs {
      width: 100%;
    }
    @include sm {
      width: 100%;
    }
    img {
      @include xs {
        max-height: 360px;
      }
      @include sm {
        max-height: 360px;
      }
      @include md-lg {
        height: 452px;
      }
      width: 100%;
    }
    .glyphicon-chevron-left:before {
      content: '';
      display: inline-block;
      width: 30px;
      height: 40px;
      background-image: url("../img/zhiweipre.png");
    }
    .glyphicon-chevron-right:before {
      content: '';
      display: inline-block;
      width: 30px;
      height: 40px;
      background-image: url("../img/zhiweinext.png");
    }
    .carousel-indicators {
      li{
        margin: 0 7.5px;
      }
    }
    .search-box {
      position: absolute;
      top: 40px;
      left: 50%;
      width: 74.3%;
      transform: translateX(-50%);
      form {
        padding: 15px;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 8px;
        .input-group {
          background: #fff;
          border-radius: 4px;
        }
        span:first-child {
          border: 0;
          font-size: 1.6rem;
          font-weight: 700;
          color: #2d3e50;
          background: #fff;
          @include xs {
            display: none;
          }
        }
        input {
          border: none;
          &::placeholder {
            font-size: 1.4rem;
          }
        }
        span:last-child {
          border: 0;
          background: #fc2a48;
          button {
            font-size: 1.6rem;
            color: #fff;
            background: #fc2a48;
          }
        }
      }
    }
  }
  .job-title {
    padding: 20px 20px 2px 20px;
    a {
      font-size: 1.4rem;
      color: #2d3e50;
      cursor: pointer;
    }
    .selected {
      font-size: 1.6rem;
      color: #2d3e50;
      font-weight: 700;
    }
    span {
      font-size: 1.6rem;
      color: #2d3e50;
      cursor: pointer;
    }
  }
  .job-content {
    padding: 30px 10px 25px 10px;
    background: #fff;
    .job-box {
      margin: 0 7px 20px 7px;
      border: 1px solid #e8e8e8;
      border-radius: 5px;
      padding: 10px;
      display: flex;
      &:hover {
        box-shadow: 0 0 7px #DAE0E3;
      }
      .job-logo {
        flex: 0 0 110px;
        height: 110px;
        @include middle-center;
        img {
          max-width: 90%;
          max-height: 90%;
        }
        border: 1px solid #e8e8e8;
      }
      .job-text {
        padding-left: 30px;
        padding-top: 15px;
        overflow: hidden;
        p:nth-of-type(1) {
          color: #fc2b47;
          font-size: 1.6rem;
        }
        p:nth-of-type(2) {
          font-size: 1.4rem;
          color: #2d3e50;
          font-weight: 700;
        }
        p:nth-of-type(3) {
          font-size: 1.4rem;
          color: #536a82;
        }
      }
    }
  }
  .company-content {
    padding: 35px 20px 45px 20px;
    background: #fff;
    .newest {
      position: relative;
      padding: 0;
      cursor: pointer;
      //background: #000;
      width: 375px;
      height: 216px;
      color: #fff;
      margin-bottom: 16px;
      @include xs{
        width: 280px;
      }
      & > img {
        width: 375px;
        height: 216px;
        @include xs{
          width: 280px;
        }
      }
      .newest-text {
        position: absolute;
        left: 35px;
        bottom: 15px;
        font-size: 1.4rem;
        p:first-child {
          font-size: 1.6rem;
        }
        p {
          font-weight: 700;
        }
        span {
          @include middle-center;
          float: left;
          margin-right: 60px;
          &:last-child {
            margin-right: 0;
          }
        }
      }
    }
    .common-item {
      padding: 0;
      border: 1px solid #e8e8e8;
      border-radius: 5px;
      @include middle-center;
      margin-left: 16px;
      margin-bottom: 16px;
      height: 100px;
      cursor: pointer;
      @include xs{
        height: 185px;
      }
      img {
        height: 90px;
        width: 90%;
        @include xs{
          height: 90%;
        }
      }
    }
    .vertical-swiper-box {
      margin-top: 16px;
      padding: 0;
    }
    .vertical-swiper {
      height: 158px;
      .swiper-pagination {
        right: 12px;
        span {
          margin: 8px 0;
          width: 18px;
          height: 18px;
          border: 1px solid #000;
          border-radius: 9px;
          background: #fff;
          &:focus{
            outline: none;
          }
        }
        .swiper-pagination-bullet-active {
          background: #fc2b47;
          border: none;
        }
      }
    }
    .company-box {
      border: 1px solid #e8e8e8;
      border-right: none;
      border-radius: 5px 0 0 5px;
      padding-right: 0;
      height: 158px;
    }
    .company-jobs {
      border: 1px solid #e8e8e8;
      border-left: none;
      border-radius: 0 5px 5px 0;
      margin-right: 45px;
      height: 158px;
      padding-top: 33px;
      padding-left: 100px;
      position: relative;
      overflow: hidden;
      @include xs{
        padding-left: 15px;
      }
      i {
        position: absolute;
        left: 70px;
        top: 8px;
        height: 142px;
        border-left: 1px solid #e8e8e8;
        @include xs{
          left: 0;
        }
      }
      p {
        font-size: 1.8rem;
        color: #2d3e50;
        margin-bottom: 42px;
        font-weight: 600;
      }
      div {
        span {
          font-size: 1.6rem;
          color: #2d3e50;
          padding-right: 15px;
          padding-left: 15px;
          border-right: 1px solid #e8e8e8;
          &:first-child {
            padding-left: 0;
          }
          &:last-child {
            padding-right: 0;
            border-right: none;
          }
        }
      }

    }
    .company-logo {
      display: none;
      @include md-lg{
        @include middle-center;
      }
      margin-top: 13px;
      margin-bottom: 13px;
      float: left;
      width: 175px;
      height: 130px;
      border: 1px solid #e8e8e8;
      border-radius: 5px;
      overflow: hidden;
      img {
        height: 117px;
        width: 90%;
      }
    }
    .company-text {
      float: left;
      margin-top: 33px;
      margin-left: 30px;
      //margin-left: 50px;
      overflow: hidden;
      @include md-lg{
        width: 39%;
      }
      @include lg{
        width: 50%;
      }
      @include xs{
        width: 70%;
      }
      p:nth-of-type(1) {
        font-size: 1.8rem;
        color: #2d3e50;
        font-weight: 600;
      }
      p:nth-of-type(2) {
        font-size: 1.4rem;
        color: #536a82;
      }
      div{
        overflow: hidden;
      }
      span {
        display: inline-block;
        width: 75px;
        height: 27px;
        text-align: center;
        line-height: 27px;
        border: 1px solid #e8e8e8;
        border-radius: 2px;
        font-size: 1.4rem;
        color: #536a82;
        margin-right: 10px;
        &:last-child {
          margin-right: 0;
        }
      }
    }
  }

}