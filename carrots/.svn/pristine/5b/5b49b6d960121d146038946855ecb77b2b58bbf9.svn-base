@import "global";

.company-detail {
  background: #f6f7f8;
  .company-detail-logo {
    width: 200px;
    height: 200px;
    border: 1px solid #e8e8e8;
    border-radius: 1px;
  }
  .company-detail-card {
    margin-top: 20px;
    background-color: #fff;
  }
  .company-card-text {
    display: inline-block;
    vertical-align: middle;
    margin-left: 30px;
    .company-name {
      padding: 20px 0;
      font-size: 20px;
      color: #2b3d51
    }
    .company-slogan {
      padding: 20px 0;
      font-size: 18px;
      color: #536a82
    }
  }
  .company-detail-content {
    font-size: 16px;
    margin: 40px 0;
    background-color: #fff;
    padding: 20px 10px;
    min-height: 500px;
  }
  .btn-tab {
    border-bottom: 1px solid #e8e8e8;
  }
  .beChosen {
    color: #fc2b47;
    border-bottom: 2px solid #fc2b47;
    font-weight: 700;
  }
  .company-detail-btn {
    padding-bottom: 15px;
    text-align: left;
  }
  .recruit-jobs,
  .company-production {
    margin: 20px 0;
  }
  .production-logo {
    display: inline-block;
    vertical-align: middle;
    width: 150px;
    height: 150px;
    overflow: hidden;
    padding: 15px 0;
  }
  .companyTab {
    min-height: 500px;
  }
  .jobs-num,
  .company-production-title,
  .company-introduction-title {
    padding-left: 6px;
    border-left: 4px solid #fc2b47;
    font-weight: 700;
  }
  .introduction-text {
    margin-top: 35px;
    font-size: 1.4rem;
    text-align: justify;
  }
  .company-detail-jobs {
    border-left: 1px solid #e8e8e8;
    min-height: 500px;
  }
  .company-information {
    white-space: nowrap;
    width: 100%;
    padding-top: 25px;
    text-align: left;
  }
  .company-msg {
    margin-left: 45px;
    font-weight: 700;
  }
  .line {
    display: inline-block;
    border-bottom: 1px solid #e8e8e8;
    width: 200px;
    vertical-align: middle;
  }
  .company-info-text {
    padding-top: 50px;
    padding-left: 90px;
    min-height: 190px;
    p {
      font-size: 1.4rem;
      margin: 0 0 28px 0;
    }
  }
  .company-target-title {
    margin-left: 45px;
    font-weight: 700;
  }
  .company-target-content {
    @include middle;
    justify-content: space-around;
    flex-wrap: wrap;
    padding: 50px 55px;
  }
  .target {
    display: inline-block;
    margin: 0 5px 20px;
    padding: 2px;
    font-size: 1.2rem;
    text-align: center;
    border: 1px solid #d9d9d9;
    border-radius: 10px;
  }
  .jobs-panel {
    margin-top: 20px;
    padding: 10px;
    border: 1px solid #e8e8e8;
  }
  .jobs-title {
    display: inline-block;
    vertical-align: middle;
    font-size: 1.4rem;
    font-weight: 700;
  }
  .jobs-list {
    display: inline-block;
    margin-left: 7px;
    vertical-align: middle;
  }
  .jobs-type {
    display: inline-block;
    margin-right: 10px;
    padding: 4px 10px;
    font-size: 1.4rem;
    color: #536a82;
    cursor: pointer;
  }
  .pick {
    background-color: #eb5255;
    color: #fff!important;
    margin: 0 5px;
  }
  .search-jobs {
    margin-top: 15px;
    padding: 25px 30px;
    border: 1px solid #e8e8e8;
    border-radius: 8px;
    cursor: pointer;
  }
  .search-jobs-detail {
    overflow: hidden;
  }
  .job-name {
    display: inline-block;
    vertical-align: middle;
    width: 25%;
    font-size: 1.6rem;
    font-weight: 700;
  }
  .job-compensation {
    margin-left: 5%;
    font-size: 1.4rem;
    font-weight: 700;
    color: #fc2b47;
  }
  .job-experience {
    margin-left: 5%;
    font-size: 1.4rem;
  }
  .no-find {
    height: 495px;
    @include middle-center;
  }
}