@charset "UTF-8";
@import "global";

.company-list {
  background: #f6f7f8;
  .company-list-banner {
    width: 100%;
    font-size: 14px;
  }
  .cancelChoice {
    color: #536a82;
    display: inline-block;
    padding: 0 8px;
    margin: 0 8px;
    cursor:pointer;
  }
  .beChosen {
    background-color: #fc2b47;
    color: white;
    display: inline-block;
    padding: 0 8px;
    margin: 0 8px;
    cursor:pointer;
  }
  .choseBoxes {
    padding: 5px 10px;
    margin: 0 10px;
  }
  .search-company {
    background-color: #fff;
    padding: 20px 15px;
    margin: 20px -15px;
  }
  .search-company-list {
    padding-top: 20px;
    margin-bottom: 20px;
    background-color: #fff;
  }
  .search-btn {
    padding: 20px 0;
  }
  .btn-xs{
    font-size:14px;
  }
  .btn-danger{
    background-color: #fc2b47;
    border-color: #fc2b47;
  }
  .search-company-card {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 30px;
    min-height: 200px;
    cursor: pointer;
    .company-card {
      flex: 1;
      display: flex;
      padding: 20px;
    }
  }
  .company-panel {
    border: 1px solid #e8e8e8;
    border-radius: 5px;
  }
  .company-logo {
    flex: 0 0 115px;
    height: 115px;
    display: flex;
    align-items: center;
    justify-content: center;
    img {
      display: inline-block;
      width: 100%;
      height: 100%;
    }
  }
  .company-text {
    padding-left: 20px;
    padding-top: 20px;
    overflow: hidden;
    p {
      margin-bottom: 15px;
    }
    .company-name {
      font-size: 16px;
      font-weight: 600;
      color: #2d3e50;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
    .common-slogan,
    .company-jobs {
      color: #536a82;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  }
  .company-message {
    @include middle;
    justify-content: space-around;
    color: #999;
    padding: 10px 0;
    background-color: #fafafa;
  }
  .no-find {
    height: 495px;
    @include middle-center;
  }
  .page-config {
    padding: 0 30px;
  }
}

